  "main": "app.js",
  "scripts": {
    "createTables": "node --require babel-core/register --require babel-polyfill ./server/v2/database/createTables.js",
    "deleteTables": "node --require babel-core/register --require babel-polyfill ./server/v2/database/delTables.js",
    "refresh": "npm run deleteTables && npm run createTables",
    "test": "npm run refresh && nyc --reporter=html --reporter=text mocha --require babel-core/register --require babel-polyfill ./server/tests/*.spec.ts --timeout 10000 --exit",
    "start": "node --require babel-core/register --require babel-polyfill ./server/app.js",
    "dev-start": "nodemon --require babel-core/register --require babel-polyfill ./server/app.js",
    "lint": "eslint server",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "herokuTables": "node --require babel-core/register --require babel-polyfill ./server/v2/database/herokuQueries.js createHerokuTables"
  },
